{
  "name": "summarize-video",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build:unix": "bun build index.ts --compile --target=bun-linux-x64 --outfile dist/summarize-video-linux",
    "build:mac": "bun build index.ts --compile --target=bun-darwin-x64 --outfile dist/summarize-video-macos",
    "build:mac-arm": "bun build index.ts --compile --target=bun-darwin-arm64 --outfile dist/summarize-video-macos-arm64",
    "build:win": "bun build index.ts --compile --target=bun-windows-x64 --outfile dist/summarize-video-windows.exe",
    "build:all": "bun run build:unix && bun run build:mac && bun run build:mac-arm && bun run build:win",
    "install:global": "bun link",
    "build:install": "bun run build:unix && bun run install:global"
  },
  "bin": {
    "summarize-video": "./index.ts"
  },
  "dependencies": {
    "@google/genai": "^1.10.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
